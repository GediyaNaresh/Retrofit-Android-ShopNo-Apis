<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nareshgediya.retrofitandroidtutorial">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.nareshgediya.retrofitandroidtutorial.activities.CartDetailActivity"></activity>
        <activity android:name="com.nareshgediya.retrofitandroidtutorial.activities.DetailActivity" />
        <activity
            android:name="com.nareshgediya.retrofitandroidtutorial.activities.SubCategoryWiseProductActivity"
            android:theme="@style/AppThemeAction" />
        <activity
            android:name="com.nareshgediya.retrofitandroidtutorial.activities.CategoryWiseProductActivity"
            android:theme="@style/AppThemeAction" />
        <activity
            android:name="com.nareshgediya.retrofitandroidtutorial.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.nareshgediya.retrofitandroidtutorial.activities.LoginActivity" />
        <activity
            android:name="com.nareshgediya.retrofitandroidtutorial.activities.DashboardActivity"
            android:theme="@style/AppThemeAction" />
    </application>

</manifest>